<p style="color: green"><%= notice %></p>
<div class="card bg-light" style="margin:50px;">
  <div class="card-header"><h3><%=@project.title%></h3></div>
    <div class="card-body">
      <p class="card-text"><%=@project.description%></p>
    </div>
</div>
<div class="container bg-light">
<div class="btn-group">
<%= link_to "Back to projects", projects_path, class: "btn btn-dark btn-sm" %>
<% if user_signed_in? %>     
    <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-dark btn-sm" %>
    <%= button_to "Destroy this project", @project, method: :delete, class: "btn btn-danger btn-sm" %>
<% end %>
</div>
</div>